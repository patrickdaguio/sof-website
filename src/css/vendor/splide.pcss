@import "@splidejs/vue-splide/css/core";

.splide {
  &__pagination {
    &__page {
      @apply block md:w-5 md:h-5 w-4 h-4 rounded-full bg-[#D9D9D9] transition;

      &:hover {
        @apply bg-[#595959];
      }

      &.is-active {
        @apply bg-[#595959];
      }
    }
  }

  &__arrow {
    @apply text-[#595959];
  }

  .is-active {
    img {
      @apply scale-105;
    }
    div {
      @apply bg-black/30;
    }
  }
}
