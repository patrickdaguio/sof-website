{% extends "_layouts/base" %}

{% block main %}
	<section class="relative h-[calc(100vh-11vh)]">
		<div class="wrapper h-full flex items-center">
			<div class="-mt-20">
				<h1 class="font-extrabold text-9xl text-center mb-16">{{entry.heading}}</h1>
				<a href="#details">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="4" stroke="currentColor" class="w-28 h-28 mx-auto">
						<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5"/>
					</svg>
				</a>
			</div>
			{# Visit Us #}
			{% include "_components/visit-us" with { 'blueBg': true } only %}
		</div>
	</section>

	{# Times & Location #}
	<section class="wrapper my-24" id="details">
		<h2 class="text-6xl font-bold">Times and Locations</h2>
	</section>

{% endblock %}
